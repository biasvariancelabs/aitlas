{
    "model": {
        "classname": "aitlas.models.ResNet50",
        "config": {
            "num_classes": 38,
            "learning_rate": 0.001,
            "pretrained": true,
            "metrics": ["f1_score"]
        }
    },
    "task": {
        "classname": "aitlas.tasks.TrainAndEvaluateTask",
        "config": {
            "epochs": 50,
            "model_directory": "examples/experiments/",
            "save_epochs": 5,
            "id": "pattern_net",
            "train_dataset_config":{
                "classname": "aitlas.datasets.PatternNetDataset",
                "config": {
                    "batch_size": 16,
                    "shuffle": true,
                    "num_workers": 4,
                    "download": false,
                    "data_dir": "/media/hdd/PatternNet",
                    "csv_file": "/media/hdd/PatternNet/train.csv",
                    "transforms": ["aitlas.transforms.ResizeCenterCropFlipHVToTensor"]
                }
            },
            "val_dataset_config":{
                  "classname": "aitlas.datasets.PatternNetDataset",
                  "config": {
                      "batch_size": 16,
                      "shuffle": false,
                      "num_workers": 4,
                      "download": false,
                      "data_dir": "/media/hdd/PatternNet",
                      "csv_file": "/media/hdd/PatternNet/val.csv",
                      "transforms": ["aitlas.transforms.ResizeCenterCropToTensor"]
                  }
              }
        }
    }
  }
