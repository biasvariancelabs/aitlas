{
    "model": {
        "classname": "aitlas.models.DeepLabV3",
        "config": {
            "num_classes": 1,
            "learning_rate": 0.0001,
            "pretrained": true
        }
    },
    "task": {
        "classname": "aitlas.tasks.TrainAndEvaluateTask",
          "config": {
              "epochs": 10,
              "model_directory": "examples/experiments/",
              "save_epochs": 5,
              "id": "landcover.ai",
              "train_dataset_config":{
                  "classname": "aitlas.datasets.SegmentationDataset",
                  "config": {
                      "batch_size": 4,
                      "shuffle": true,
                      "num_workers": 1,
                      "csv_file_path": "/media/hdd/landcover.ai/train.txt",
                      "root": "/media/hdd/CamVid/train"
                  }
              },
              "val_dataset_config":{
                    "classname": "aitlas.datasets.SegmentationDataset",
                    "config": {
                        "batch_size": 1,
                        "shuffle": false,
                        "num_workers": 1,
                        "csv_file_path": "/media/hdd/landcover.ai/val.txt",
                        "root": "/media/hdd/CamVid/val"
                    }
              }
        }
    }
}