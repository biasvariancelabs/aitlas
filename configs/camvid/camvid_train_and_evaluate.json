{
    "model": {
        "classname": "aitlas.models.DeepLabV3",
        "config": {
            "num_classes": 12,
            "learning_rate": 0.0001,
            "pretrained": true
        }
    },
    "task": {
        "classname": "aitlas.tasks.TrainAndEvaluateTask",
          "config": {
              "epochs": 50,
              "model_directory": ".experiments/",
              "save_epochs": 10,
              "id": "camvid",
              "train_dataset_config":{
                  "classname": "aitlas.datasets.CamVidDataset",
                  "config": {
                      "batch_size": 2,
                      "shuffle": true,
                      "num_workers": 1,
                      "root": "./data/CamVid/train",
                      "transforms": ["aitlas.transforms.MinMaxNormTransponse"],
                      "target_transforms": ["aitlas.transforms.Transponse"]
                  }
              },
              "val_dataset_config":{
                    "classname": "aitlas.datasets.CamVidDataset",
                    "config": {
                        "batch_size": 1,
                        "shuffle": false,
                        "num_workers": 1,
                        "root": "./data/CamVid/test",
                        "transforms": ["aitlas.transforms.MinMaxNormTransponse"],
                        "target_transforms": ["aitlas.transforms.Transponse"]
                    }
              }
        }
    }
}
